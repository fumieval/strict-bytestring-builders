#!/bin/bash
set -eo pipefail

results_dir=dist/results
mkdir -p "$results_dir"

function benchmark {
  dist/build/benchmark/benchmark -o "$results_dir/$1.html" "$1/"
}

benchmark "regular-concat-10"
benchmark "regular-concat-100"
benchmark "regular-concat-1000"
benchmark "foldl-1"
benchmark "foldl-100"
benchmark "foldl-10000"
benchmark "foldr-100"
benchmark "foldr-10000"
benchmark "concat-100"
benchmark "concat-10000"
