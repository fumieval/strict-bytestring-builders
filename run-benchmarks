#!/bin/bash
set -eo pipefail

results_dir=dist/results
mkdir -p "$results_dir"

function benchmark {
  dist/build/benchmark/benchmark -o "$results_dir/$1.html" "$1/"
}

benchmark "finalization-1"
benchmark "finalization-10"
benchmark "finalization-100"
benchmark "finalization-1000"
benchmark "finalization-10000"
benchmark "regular-concat-10"
benchmark "regular-concat-100"
benchmark "regular-concat-1000"
benchmark "regular-concat-10000"
